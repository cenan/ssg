#!/usr/bin/env python

import os
import sys
import getopt

def create():
	print "create"

def serve():
	print "serve"

def usage():
	print "usage: ssg options"
	print "  where options are:"
	print "    -c[reate] = creates a skeleton project in current directory"
	print "    -s[erve]  = serves HTML directory on localhost:9876"
	print "  when using the long forms prepend --"
	print "  example: ssg --generate"

def main():
	try:
		opts, args = getopt.getopt(sys.argv[1:],
				"c:s",
				["create","serve"])
	except getopt.GetoptError, err:
		print str(err)
		usage()
		sys.exit(2)
	for o, a in opts:
		if o in ("-c", "--create"):
			create()
		elif o in ("-s", "--serve"):
			serve()
	if len(opts) == 0:
		usage()

if __name__=="__main__":
    main()

